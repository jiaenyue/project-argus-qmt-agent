# Argus MCP Server Environment Configuration
# Copy this file to .env and modify the values as needed

# Server Configuration
ARGUS_MCP_HOST=localhost
ARGUS_MCP_PORT=8001
ARGUS_MCP_MAX_CONNECTIONS=100

# Data Service Configuration
ARGUS_DATA_SERVICE_URL=http://localhost:8000
ARGUS_DATA_SERVICE_TIMEOUT=30

# Cache Configuration
ARGUS_CACHE_ENABLED=true
ARGUS_CACHE_SIZE=1000
ARGUS_CACHE_TTL=3600
ARGUS_CACHE_POLICY=LRU

# Performance Monitoring
ARGUS_PERFORMANCE_MONITORING=true
ARGUS_METRICS_RETENTION_HOURS=24

# Retry Configuration
ARGUS_RETRY_ENABLED=true
ARGUS_MAX_RETRY_ATTEMPTS=3
ARGUS_RETRY_DELAY=1.0
ARGUS_RETRY_BACKOFF_FACTOR=2.0

# Connection Pool Configuration
ARGUS_CONNECTION_POOL_SIZE=10
ARGUS_CONNECTION_TIMEOUT=30
ARGUS_CONNECTION_KEEPALIVE=60

# Logging Configuration
ARGUS_LOG_LEVEL=INFO
ARGUS_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# ARGUS_LOG_FILE=logs/mcp_server.log

# Security Configuration
ARGUS_ENABLE_CORS=true
ARGUS_ALLOWED_ORIGINS=*

# Development/Debug Settings
# ARGUS_DEBUG=false
# ARGUS_PROFILE=false
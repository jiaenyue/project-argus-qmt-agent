# Data Agent Service Environment Configuration
# Copy this file to .env and update with your actual values

# Basic Configuration
DEBUG=false
ENVIRONMENT=development

# Server Configuration
DATA_AGENT_HOST=0.0.0.0
DATA_AGENT_PORT=8001
DATA_AGENT_LOG_LEVEL=info
DATA_AGENT_RELOAD=false

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000

# Security Configuration
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
# Environment API Keys (can override config file)
API_KEY_1=demo_key_12345
# API_KEY_2=additional_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# QMT配置
XTDATA_PATH=C:\\迅投极速交易终端 睿智融科版\\userdata_mini
XTDATA_SESSION_ID=123456

# 监控配置
WINDOWS_PERFORMANCE_COUNTERS_ENABLED=true
WINDOWS_EVENT_LOG_ENABLED=true
HEALTH_CHECK_ENABLED=true

# 速率限制配置
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE=memory  # 使用本地内存存储
RATE_LIMIT_STRATEGY=token_bucket  # token_bucket 或 sliding_window

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# 开发模式配置
DEVELOPMENT_MODE=false
DEBUG=false
AUTO_RELOAD=false

# 性能配置
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=300  # 5分钟
CACHE_MAX_SIZE=1000

# 告警配置
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_password
ALERT_EMAIL_TO=admin@yourcompany.com

# 备份配置
BACKUP_ENABLED=false
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d
BACKUP_PATH=./backups/

# 第三方服务配置
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=